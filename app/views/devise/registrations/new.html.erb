<div class="px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Sign up Today and earn <%= number_to_currency Transference::INITIAL_VALUE %></h1>
  <p class="lead">Just simple like that.</p>
</div>

<div class="row pb-md-4">
  <div class="col-sm-6 offset-sm-3">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.input :name, autofocus: true %>
        </div>

        <div class="col-sm-6">
          <%= f.input :email %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <%= f.input :password, hint: false %>
          <% if @minimum_password_length %>
            <small>(<%= @minimum_password_length %> characters minimum)</small>
          <% end %>
        </div>

        <div class="col-sm-6">
          <%= f.input :password_confirmation %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12 text-center">
          <%= f.submit t("sign_up"), class: "btn btn-lg btn-primary btn-block" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
